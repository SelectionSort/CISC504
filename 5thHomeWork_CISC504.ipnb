   "source": [
    "# H.W. Exercise: Using what we learned in this lesson \n",
    "# draw a stick figure person you can be creative substituting the lines for rectangles.\n",
    "\n",
    "from mobilechelonian import Turtle\n",
    "t=Turtle()\n",
    "t.speed(5)\n",
    "t.pencolor(\"blue\")\n",
    "\n",
    "def rectangle_object_r(length,width):\n",
    "    for i in range(2):\n",
    "        t.forward(width)\n",
    "        t.right(90)\n",
    "        t.forward(length)\n",
    "        t.right(90)\n",
    "        \n",
    "def rectangle_object_l(length,width):\n",
    "    for i in range(2):\n",
    "        t.forward(width)\n",
    "        t.left(90)\n",
    "        t.forward(length)\n",
    "        t.left(90)\n",
    "\n",
    "t.circle(50,360)\n",
    "t.penup(); t.left(90); t.forward(60);t.right(90);t.forward(15);t.pendown()\n",
    "t.right(90)\n",
    "t.circle(10,180)\n",
    "t.penup(); t.left(90); t.forward(65);t.left(90);t.pendown()\n",
    "t.circle(10,180)\n",
    "t.penup(); t.right(90); t.forward(15);t.right(90);t.forward(30);t.right(90);t.forward(10);t.pendown()\n",
    "t.left(90)\n",
    "t.circle(10,180)\n",
    "t.penup(); t.left(90); t.forward(10);t.left(90);t.forward(30);t.left(90);t.pendown()\n",
    "rectangle_object_r(length=100,width=50)\n",
    "t.forward(50)\n",
    "t.left(45)\n",
    "rectangle_object_r(length=50,width=25)\n",
    "t.left(135)\n",
    "t.forward(50)\n",
    "rectangle_object_l(length=100,width=50)\n",
    "t.forward(50)\n",
    "t.right(45)\n",
    "rectangle_object_l(length=50,width=25)\n",
    "t.right(135)\n",
    "t.forward(50)\n",
    "t.right(90)\n",
    "t.forward(100)\n",
    "t.left(90)\n",
    "rectangle_object_r(length=75,width=25)\n",
    "t.left(180)\n",
    "rectangle_object_l(length=75,width=25)\n",
    "t.home()"
   ]
